<%= form_for(tournament) do |f| %>
  <% if tournament.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>

      <ul>
      <% tournament.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
      <div class="col-lg-6 col-sm-6 col-md-6">
      <%= f.label :name %>
      </div>
      <div class="col-lg-6 col-sm-6 col-md-6">
       <%= f.text_field :name %>
      </div>
   </div>
  <p/>
 <div class="row">
      <div class="col-lg-6 col-sm-6 col-md-6">
      <%= f.label :no_of_rounds %>
      </div>
      <div class="col-lg-6 col-sm-6 col-md-6">
       <%= f.number_field :no_of_rounds %>
      </div>
   </div>


  <h4>Players List(Number of players:<label id="playerslength"><%=@players.length%></label>)</h1>
 <%= link_to 'New Player', new_player_path %>

<table id="playertable" class="table-striped table">
  <tr>
    <th>Player</th>
    <th>Rating</th>
    <th> </th>
  </tr>

  <% @players.each do |player| %>
    <tr>
       <%= fields_for "players[]", player do |pf| %>


          <td>
               <button type="button" class="btn btn-default btn-sm">
                  <span class="glyphicon glyphicon-remove"></span>
               </button>
            <%= pf.text_field :name %>
           </td>
         <td><%= pf.text_field :rating %></td>
       <% end %>
    </tr>
  <% end %>
</table>
  <div class="actions">
    <%= f.submit %>
    <%= button_tag(id:'addplayer1',name:'addplayer',type: 'button') do
       content_tag(:normal, 'Add Player')
     end
    %>

  </div>
<% end %>
